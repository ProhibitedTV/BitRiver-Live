<?xml version="1.0" encoding="utf-8"?>
<Server version="8">
    <Name>OvenMediaEngine</Name>
    <!-- Required for health endpoint and origin-mode APIs; Compose mounts this file at /opt/ovenmediaengine/bin/origin_conf/Server.xml -->
    <Type>origin</Type>
    <!-- Explicitly declare the server IP to satisfy the current OvenMediaEngine schema and keep the config portable across hosts. -->
    <IP>0.0.0.0</IP>
    <Bind>
        <!-- Bind the primary server socket so the runtime schema requirement is satisfied even before module listeners start. -->
        <Address>0.0.0.0</Address>
        <Port>9000</Port>
    </Bind>
    <PrivacyProtection>false</PrivacyProtection>
    <StunServer>stun.l.google.com:19302</StunServer>

    <Modules>
        <Control>
            <Server>
                <Bind>
                    <Address>*</Address>
                    <Port>8081</Port>
                </Bind>
            </Server>
            <Authentication>
                <User>
                    <ID>admin</ID>
                    <!-- Replace with a secure password for production deployments. -->
                    <Password>local-dev-password</Password>
                </User>
            </Authentication>
        </Control>

        <Host>
            <VirtualHosts>
                <VirtualHost>
                    <Name>default</Name>
                    <App>
                        <Name>live</Name>
                    </App>
                </VirtualHost>
            </VirtualHosts>
        </Host>
    </Modules>
</Server>
